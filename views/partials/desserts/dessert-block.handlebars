
<div class="row">
	<div class="well well-sm">
		{{dessert_name}}

		<div class="btn-group btn-group-1" role="group">
			<div class="btn-group" role="group">
				<button class="change-devoured-status btn btn-devour-dessert btn-primary btn-sm btn-group" data-id="{{id}}" data-newdevoured="{{devoured}}">
					{{#if devoured}} Devour it! {{else}} Excrete it! {{/if}}
				<span class="glyphicon glyphicon-cutlery" aria-hidden="true"></span></button>
			</div>
			<div class="btn-group" role="group">
				<button class="btn btn-delete-dessert btn-sm btn-danger" data-id="{{id}}"><span class="glyphicon glyphicon-remove-circle" aria-hidden="true"></span></button>
			</div>
		</div>
	</div>
</div>


